{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "esnext"],
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"declaration": true,
		// "declarationDir": "dist/",
		"newLine": "LF",

		"strict": true,
		"strictBindCallApply": false,
		"noImplicitThis": false
	},

	"exclude": ["node_modules", "*.d.ts"],
	"include": ["src/**/*.ts"]
}
